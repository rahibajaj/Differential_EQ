<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructions2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EQSolve"
        android:layout_marginTop="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView10"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Variables can be any single letter(a-z)" />

    <TextView
        android:id="@+id/textView11"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As it is a linear ordinary differential equation solver, it can only take two variables and only first derivative of any one of them" />

    <TextView
        android:id="@+id/textView12"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The following functions can be used as in the given format"
        />

    <TextView
        android:id="@+id/textView13"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sine - sin(x)\ncosine - cos(x)\ntangent - tan(x)\nexponential - exp(x)\nnatural log - ln(x)\nabsolute value - abs(x)\n" />

    <TextView
        android:id="@+id/textView14"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can close the instructions by clicking 'Close' below" />

    <Button
        android:id="@+id/close2"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        />

</LinearLayout>
